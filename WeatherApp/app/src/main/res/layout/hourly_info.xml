<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hourly_row_item_height"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hourly_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/hourly_row_item_default_margin"
        android:textColor="@color/white"
        android:textSize="@dimen/hourly_row_item_time_font_size"
        tools:text="01 PM 08 May" />

    <ImageView
        android:id="@+id/hourly_item_icon"
        android:layout_width="@dimen/hourly_row_item_icon_size"
        android:src="@drawable/image_loading"
        android:layout_height="@dimen/hourly_row_item_icon_size"
        android:layout_marginStart="@dimen/hourly_row_item_default_margin"
        android:contentDescription="@string/weather_icon" />

    <TextView
        android:id="@+id/hourly_item_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/hourly_row_item_default_margin"
        android:textColor="@color/white"
        android:textSize="@dimen/hourly_row_item_temp_font_size"
        android:textStyle="bold"
        tools:text="21Â°" />

    <TextView
        android:id="@+id/hourly_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/hourly_row_item_default_margin"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/hourly_row_item_time_font_size"
        tools:text="broken clouds" />

</LinearLayout>